    <div class="login-subscribe">
      <p>Login</p>
      <div class="login-subscribe-form">
        <form action="#" method="post" enctype="multipart/form-data" id="form">
          <div class="forms">
            <label for="email" class="labels">Email</label>
            <input type="text" name="email" class="inputs" />
          </div>
          <div class="forms">
            <label for="password" class="labels">Password</label>
            <input type="password" name="password" class="inputs" />
          </div>

          <input type="submit" value="Login" id="btn-upload" />
        </form>
      </div>
    </div>

    <footer>
      <div id="fleft">&copy; 2024 TextLearn</div>
      <div id="fright">
        <div id="about">About Us</div>
        <div id="join">Join The TL team</div>
      </div>
    </footer>
  </body>
</html>
