<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="/style.css" />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/images/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/images/favicon-16x16.png"
    />
  </head>
  <body>
    <header>
      <div class="nav-link"><a href="/">Home</a></div>
      <div id="logo">TextLearn</div>
      <div class="nav-link">
        <a href="/settings">User</a>
        <a href="/marketplace">MarketPlace</a>
      </div>
    </header>

    <div class="container">
      <aside>
        <div id="user">
          <img src="/images/user.png" id="usr-image" alt="User Image" />
          <div id="username"><%= user.name %></div>
          <h1>BIO</h1>
          <div id="bio"><%= user.bio ? user.bio : "Change me!" %></div>
          <div id="courses">
            <h3>Your Courses</h3>
            <hr />
          </div>
        </div>
      </aside>

      <section>
        <div id="upload">
          <div class="switcher">
            <input
              class="btn-upload2"
              type="button"
              value="settings"
              onclick="window.location.href='/settings'"
            />
            <input
              class="btn-upload2"
              type="button"
              value="upload a new course"
              onclick="window.location.href='/upload'"
            />
          </div>
          <form action="#" method="POST" id="form">
            <label for="updtname" class="labels2">Username</label>
            <div class="forms2">
              <input
                type="text"
                name="updtname"
                id="user-change"
                class="inputs"
              />
              <button type="submit" class="btn-upload2">
                Change<br />Username
              </button>
            </div>
            <label for="updtbio" class="labels2">Bio</label>
            <div class="forms2">
              <textarea name="updtbio" id="bio-input" class="inputs"></textarea>
              <button type="submit" class="btn-upload2" id="changeBio">
                Change<br />Bio
              </button>
            </div>
          </form>
        </div>
      </section>
    </div>

    <footer>
      <div id="fleft">&copy; 2024 TextLearn</div>
      <div id="fright">
        <div id="about"><a href="/about">About US</a></div>
        <div id="join">Join The TL team</div>
      </div>
    </footer>
  </body>
</html>
